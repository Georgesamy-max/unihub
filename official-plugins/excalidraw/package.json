{
  "name": "excalidraw-plugin",
  "version": "0.18.0",
  "description": "Excalidraw 离线绘图工具 - 手绘风格的图表和白板工具",
  "author": {
    "name": "Excalidraw Contributors",
    "url": "https://github.com/excalidraw/excalidraw"
  },
  "keywords": [
    "excalidraw",
    "drawing",
    "diagram",
    "whiteboard",
    "sketch",
    "绘图",
    "图表",
    "白板"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/copy-assets.js",
    "package": "node scripts/package.js"
  },
  "unihub": {
    "id": "com.unihub.excalidraw",
    "name": "Excalidraw 绘图工具",
    "icon": "dist/favicon.svg",
    "category": "tool",
    "permissions": [
      "clipboard",
      "fs"
    ],
    "entry": "dist/index.html"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "archiver": "^7.0.1",
    "fs-extra": "^11.2.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.3"
  }
}
