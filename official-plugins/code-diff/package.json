{
  "name": "code-diff",
  "version": "1.0.0",
  "description": "代码对比工具 - 基于 Monaco Editor 的强大代码差异对比功能，支持语法高亮和多种编程语言",
  "author": {
    "name": "UniHub Team",
    "email": "team@unihub.dev",
    "url": "https://github.com/unihub"
  },
  "keywords": [
    "code",
    "diff",
    "compare",
    "monaco",
    "代码对比",
    "差异比较"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "package": "npm run build && node scripts/package.js"
  },
  "dependencies": {
    "monaco-editor": "^0.52.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.14",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.0",
    "vite": "^6.0.0",
    "vue-tsc": "^2.0.0"
  },
  "unihub": {
    "id": "com.unihub.code-diff",
    "name": "代码对比工具",
    "icon": "https://api.iconify.design/vscode-icons/file-type-diff.svg",
    "category": "tool",
    "entry": "dist/index.html",
    "permissions": [
      "clipboard",
      "storage"
    ]
  }
}
